{
   "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": "./src", // Tells TS your source code is in 'src'
      "outDir": "./dist", // Where compiled code goes
      "moduleResolution": "node",
      "esModuleInterop": true, // Critical for 'import express from "express"'
      "strict": true, // Enables best-practice type checking
      "skipLibCheck": true, // Speeds up compilation
      "forceConsistentCasingInFileNames": true
   },
   "include": ["src/**/*", "config"], // Tells TS to only look inside 'src'
   "exclude": ["node_modules"]
}